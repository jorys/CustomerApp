{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
  },
  "PasswordHashSettings": {
    "Iterations": 1000,
    "SaltSize": 16,
    "KeySize": 32
  },
  "JwtSettings": {
    "Issuer": "CustomerApp",
    "Audience": "Customer",
    "ExpiryMinutes": 60,
    "Secret": ""
  },
  "ResetPasswordSettings": {
    "ExpiryMinutes": 20
  },
  "EmailSenderSettings": {
    "SmtpServer": "host.docker.internal",
    "Port": 2525,
    "From": "customer-app@test.com",
    "Subject": "Reset password",
    "Content": "Here is your token: "
  },
  "ConcurrencyRetrySettings": {
    "MaxTryCount": 3
  }
}
